<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:id="@+id/item_news_home"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="135dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp"
        style="@style/CardView.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">

            <ImageView
                android:id="@+id/imgNewsHome"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/notfound"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleNewsHome"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Lorem Ipsum dolor sit amet"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLength="1000"
                android:maxLines="2"
                app:layout_constraintBottom_toTopOf="@+id/descNewsHome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgNewsHome"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descNewsHome"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem impsim dolor sit amet lore"
                android:textColor="#575757"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLength="1000"
                android:maxLines="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgNewsHome" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>